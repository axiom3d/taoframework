<Window x:Class="TaoMediaplayer.Main"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Tao Mediaplayer" Height="300" Width="300" Name="MainWindow" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" ResizeMode="CanResizeWithGrip">
    <Grid>
    <Image Name="videoImage" Stretch="Fill" />
        <Grid Height="56" Name="overlayGrid" VerticalAlignment="Bottom">
            <Button HorizontalAlignment="Right" Margin="0,18,87,16" Name="playButton" Width="41" Cursor="Hand" Click="playButton_Click">Play</Button>
            <Button HorizontalAlignment="Right" Margin="0,18,40,16" Name="stopButton" Width="41" Cursor="Hand" Click="stopButton_Click">Stop</Button>
            <Button Margin="18,18,0,16" Name="openButton" HorizontalAlignment="Left" Width="75" Click="openButton_Click" Cursor="Hand">Open File</Button>
        </Grid>
    </Grid>
</Window>
